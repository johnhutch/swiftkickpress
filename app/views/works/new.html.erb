<h1>New work</h1>

<% form_for(@work) do |f| %>
  <%= f.error_messages %>

	<p>
	  <%= f.label :category_id, "Category:" %><br />
	  <%= f.collection_select :category_id, Category.all, :id, :name %>
	</p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', works_path %>
