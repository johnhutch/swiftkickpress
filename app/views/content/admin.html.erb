<h2>Site Admin</h2>

<h3>Works</h3>
<table>
	<thead>
	  <tr>
	    <th>Category</th>
	    <th>Author</th>
	    <th>Title</th>
		<th>Status</th>
		<th>Admin</th>
	  </tr>
	</thead>
	<tbody>
	<% for work in @works %>
	  <tr>
	    <td><%=h work.category.name %></td>
	    <td><%=h work.user.name %></td>
	    <td><%=h work.title %></td>
		<td><%= work.published ? "Published" : "Unpublished" %></td>
	    <td><%= link_to 'Show', work %> | 
	        <%= link_to 'Edit', edit_work_path(work) %> | 
	        <%= link_to 'Destroy', work, :confirm => 'You are about to delete a work. This cannot be undone. Are you sure you want to delete this work?', :method => :delete %></td>
	  </tr>
	<% end %>
	</tbody>
</table>

<h3>Users</h3>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Join Date</th>
			<th>Roles</th>
			<th>Admin</th>
		</tr>
	</thead>
	<tbody>
	<% for user in @users %>
		<tr>
			<td><%= link_to user.name, user_path(user) %></td>
			<td><%= mail_to user.email, user.email %></td>
			<td><%= user.created_at.strftime("%m/%d/%Y") %></td>
			<td><% for role in user.roles %><%= role.name %>, <% end %> | <%= link_to 'edit roles', user_roles_path(user) %></td>
			<td><%= link_to "Show", user_path(user) %> | <%= link_to "Edit", edit_user_path(user) %></td>
		</tr>
	<% end %>
</table>

<h3>Content Categories</h3>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Admin</th>
		</tr>
	</thead>
	<tbody>
	<% for category in @categories %>
		<tr>
			<td><%= link_to category.name, category_path(category) %></td>
			<td><%= link_to "Edit", edit_category_path(category) %></td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Create a new category", new_category_path %></p>
