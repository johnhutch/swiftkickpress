<h3>Editing <%= @user.name %></h3>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
	<p>
		<%= f.label :bio, "Bio" %><br />
		<%= f.text_area :bio %>
	</p>
	
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
